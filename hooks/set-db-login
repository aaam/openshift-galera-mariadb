#!/bin/bash

set -e

#app_name=$1
#namespace=$2
#local_gear=$3

# echo "$@" >> $OPENSHIFT_MARIADB_DIR/hook-log

echo ${@:4};
for arg in ${@:4}; do
	arg=$(echo "$arg" | tr -d "\n" | tr -d "'")
	gear=$(echo "$arg" | cut -f 1 -d '=')
	addr=$(echo "$arg" | cut -f 3 -d '=')

	# ignore if empty
	if [[ -z "$arg" ]]; then
		continue
	fi

	# addr will have a format like this: 
	# admin:pass
	
	if [ ! -f $OPENSHIFT_MARIADB_DIR/env/OPENSHIFT_MARIADB_USERNAME ] && [ ! -f $OPENSHIFT_MARIADB_DIR/env/OPENSHIFT_MARIADB_PASSWORD ]
	then

		login_array=(${addr//:/ })

		echo ${login_array[0]} > $OPENSHIFT_MARIADB_DIR/env/OPENSHIFT_MARIADB_DB_USERNAME
		echo ${login_array[1]} > $OPENSHIFT_MARIADB_DIR/env/OPENSHIFT_MARIADB_DB_PASSWORD

		# Initialize our DB
		$OPENSHIFT_MARIADB_DIR/bin/control init-db
		sleep 5

	fi

done
